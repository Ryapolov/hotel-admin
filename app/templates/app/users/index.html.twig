{% extends 'base.html.twig' %}

{% block body %}
    <div class="controls">
        <a href="{{ path('users.create') }}" class="btn btn-success">Create User</a>
    </div>
    <div class="card"></div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">User list</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right"
                                   placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Role</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.name_first }} {{ user.name_last }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.create_date }}</td>
                                <td>{{ user.status }}</td>
                                <td>{{ user.role }}</td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="{{ path('user.view', {'id': user.id}) }}">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <a class="btn btn-info btn-sm" href="#">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    {% if user.status == "ACTIVE" %}
                                        <a class="btn btn-danger btn-sm" href="{{ path('user.block', {'id': user.id}) }}">
                                            <i class="fas fa-trash">
                                            </i>
                                            Block
                                        </a>
                                    {% endif %}
                                    {% if user.status == "BLOCKED" %}
                                        <a class="btn btn-danger btn-sm" href="{{ path('user.activate', {'id': user.id}) }}">
                                            <i class="fas fa-trash">
                                            </i>
                                            Activate
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
{% endblock %}